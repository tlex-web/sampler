{
    "name": "sampler",
    "version": "1.0.0",
    "description": "Sampling Application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-packager . sampler --platform=win32 --arch=x64 --version=0.26.0 --overwrite --icon=assets/icons/win/icon.ico --prune=true --out=release-builds",
        "test": "jest --watchAll"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tlex-web/sampler.git"
    },
    "keywords": [
        "electronjs",
        "javascript",
        "nodejs"
    ],
    "author": "Tim Lui",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tlex-web/sampler/issues"
    },
    "homepage": "https://github.com/tlex-web/sampler#readme",
    "devDependencies": {
        "electron": "^26.2.4",
        "eslint": "^8.49.0",
        "jest": "^29.7.0",
        "spectron": "^19.0.0"
    },
    "dependencies": {
        "electron-log": "^5.0.0-beta.25"
    },
    "jest": {
        "testEnvironment": "node",
        "testRunner": "jest-circus/runner",
        "testMatch": [
            "**/__tests__/**/*.js?(x)",
            "**/?(*.)+(spec|test).js?(x)"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules/",
            "<rootDir>/build/",
            "<rootDir>/dist/"
        ],
        "globalSetup": "<rootDir>/test/setup.js",
        "globalTeardown": "<rootDir>/test/teardown.js"
    }
}
